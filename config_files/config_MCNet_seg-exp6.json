{
    "name": "MCNet_seg-exp6",
    "n_gpu": 1,

    "model": {
        "type": "Unet",
        "args": {
            "in_channel" : 1,
            "out_channel": 2
        }
    },
    "data_loader": {
        "type": "GeneralDataLoader",
        "args":{
            "data_dir": ["/research/cbim/vast/qc58/pub-db/CAP/process/MC-Net/2d_new_cap_process_train.h5","/research/cbim/vast/qc58/pub-db/CAP/process/MC-Net/2d_new_cap_process_test.h5"],
            "batch_size": 128,
            "shuffle": true,
            "validation_split": [["train"],["test"]],
            "num_workers": 4
        },
        "transforms": ["Unsqueeze","Padding","RandomCrop","RandomFlip","ToTensor","Normalize"],
        "transforms_args": {
            "Padding": [230],
            "RandomFlip": [true, true],
            "RandomCrop": [200],
            "Normalize": [128,168.6],
            "ToTensor": ["long"]
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.01,
            "momentum": 0.9,
            "weight_decay": 0.0005
        }
    },
    "loss": ["cross_entropy_loss","tversky_loss"],
    "metric": ["dice"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "Trainer",
        "epochs": 300,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 200,

        "tensorboard": true
    }
}
