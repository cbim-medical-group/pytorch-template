{
    "name": "MMWHS_recon_exp3_mar18",
    "n_gpu": 1,

    "model": {
        "type": "Vae",
        "args": {
            "zsize": 512,
            "layer_count": 4,
            "channels": 1
        }
    },
    "data_loader": {
        "type": "GeneralDataLoader",
        "args":{
            "data_dir": "/share_hd1/db/MRRecon/MMWHS_training.h5",
            "batch_size": 2,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 0
        },
        "transforms": ["FilterLabel","Unsqueeze","Padding3d", "RandomCrop3d","ReplaceTensor","Unsqueeze","ToTensor","Normalize3d"],
        "transforms_args": {
            "FilterLabel": [[2],[1]],
            "Padding3d": [108],
            "RandomCrop3d": [96],
            "ReplaceTensor": ["mask", "mask"],
            "Normalize3d": [0.5,0.5]
        }
    },
    "test_data_loader": {
        "type": "GeneralDataLoader",
        "args":{
            "data_dir": "/share_hd1/db/MRRecon/MMWHS_training.h5",
            "batch_size": 1,
            "shuffle": false,
            "validation_split": 0,
            "num_workers": 0
        },
        "transforms": ["FilterLabel","Unsqueeze","Padding3d", "ToTensor","Normalize3d"],
        "transforms_args": {
            "FilterLabel": [[2],[1]],
            "Padding3d": [96],
            "Normalize3d": [0.5,0.5]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": ["vae_bce_kld"],
    "metric": ["accuracy_binary","dice_binary"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "TrainerVae",
        "epochs": 200,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 40,

        "tensorboard": true
    }
}
