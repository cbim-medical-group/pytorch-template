{
    "name": "NIPS_cls_real_exp2",
    "n_gpu": 1,

    "model": {
        "type": "Vgg11Bn",
        "args": {
            "num_classes": 10
        }
    },
    "data_loader": {
        "type": "GeneralDataLoader",
        "args":{
            "data_dir": "/share_hd1/db/NIPS/MNIST/general_format_mnist_train_all.h5",
            "batch_size": 256,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 0
        },
        "transforms": ["Unsqueeze", "RandomCrop","ToTensor","NormalizeInstance"],
        "transforms_args": {
            "ToTensor": ["long"],
            "RandomCrop": [28]
        }
    },
    "test_data_loader": {
        "type": "GeneralDataLoader",
        "args":{
            "data_dir": "/share_hd1/db/NIPS/MNIST/general_format_mnist_test.h5",
            "batch_size": 256,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 0
        },
        "transforms": ["Unsqueeze", "RandomCrop","ToTensor","NormalizeInstance"],
        "transforms_args": {
            "ToTensor": ["long"],
            "RandomCrop": [28]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": ["cross_entropy_loss"],
    "metric": ["accuracy", "sensitivity","specificity"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "Trainer",
        "epochs": 300,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
