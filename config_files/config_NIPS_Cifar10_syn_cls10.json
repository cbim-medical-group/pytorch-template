{
    "name": "NIPS_cifar10_cls5",
    "n_gpu": 1,

    "model": {
        "type": "Resnet101",
        "args": {
            "num_classes": 10
        }
    },
    "data_loader": {
        "type": "GeneralDataLoader",
        "args":{
            "data_dir": ["/share_hd1/db/NIPS/CIFAR10/syn/general_format_cifar10_dcgan_gp_finelabel_cDCGANResnet_v2_epoch150_x1.h5","/share_hd1/db/NIPS/CIFAR10/general_format_test_cifar10_10label.h5"],
            "batch_size": 128,
            "shuffle": true,
            "validation_split": [["train"], ["val"]],
            "num_workers": 4
        },
        "transforms": ["Padding","RandomFlip","RandomCrop","ToTensor","Normalize"],
        "transforms_args": {
            "Padding": [40],
            "RandomFlip": [true, false],
            "RandomCrop": [32],
            "ToTensor": ["long"],
            "Normalize": [[129.30, 124.07, 112.43], [51.20, 50.58, 51.56]]
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.01,
            "momentum": 0.9,
            "weight_decay": 0.0005
        }
    },
    "loss": ["cross_entropy_loss"],
    "metric": ["accuracy", "sensitivity","specificity"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "Trainer",
        "epochs": 150,

        "save_dir": "saved/",
        "save_period": 30,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 150,

        "tensorboard": true
    }
}
