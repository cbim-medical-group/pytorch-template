{
    "name": "Misalignment_Correction_exp5_cls_1ch",
    "n_gpu": 1,
    "model": {
        "type": "Resnet34",
        "args": {
            "num_classes": 820
        }
    },
    "data_loader": {
        "type": "GeneralDataLoader",
        "args":{
            "data_dir": "/share_hd1/db/MRRecon/MMWHS_training.h5",
            "batch_size": 3,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 0
        },
        "transforms": ["FilterLabel","ExpRandomFlip","ExpRandomShiftSxlxCls","ExpPadding3d","ExpRandomCrop3d","ToTensor","Normalize3d"],
        "transforms_args": {
            "FilterLabel": [[2,3],[1,1]],
            "ExpPadding3d": [[120,120,10]],
            "ExpRandomCrop3d": [[120,120,10]],
            "ExpRandomShiftSxlxCls": [0.8, 20, 10, true],
            "Normalize3d": [[0,0,0],[100,1,1]],
            "ToTensor": ["long"]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": ["cross_entropy_loss"],
    "metric": ["accuracy"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "TrainerUnsupervised",
        "epochs": 300,

        "save_dir": "saved/",
        "save_period": 30,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 300,

        "tensorboard": true
    }
}
