{
    "name": "NIPS_cls_real_exp4_cifar10",
    "n_gpu": 1,

    "model": {
        "type": "Resnet101",
        "args": {
            "num_classes": 10
        }
    },
    "data_loader": {
        "type": "Cifar10DataLoader",
        "args":{
            "data_dir": "/share_hd1/db/NIPS/Qi",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 4
        },
        "transforms": ["ToTensor","Normalize"],
        "transforms_args": {
            "ToTensor": ["long"],
            "Normalize": [[0], [1]]
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.01,
            "momentum": 0.9,
            "weight_decay": 0.0005
        }
    },
    "loss": ["cross_entropy_loss"],
    "metric": ["accuracy", "sensitivity","specificity"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 150,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "Trainer",
        "epochs": 350,

        "save_dir": "saved/",
        "save_period": 30,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 300,

        "tensorboard": true
    }
}
