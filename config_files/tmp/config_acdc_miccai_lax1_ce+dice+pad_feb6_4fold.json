{
    "name": "ACDC_MICCAI_SAX_ce+dice+padding_224_5folds1",
    "n_gpu": 1,

    "model": {
        "type": "UnetLax",
        "args": {
            "in_channel" : 5,
            "out_channel": 4
        }
    },
    "data_loader": {
        "type": "GeneralDataLoader",
        "args":{
            "data_dir": "/share_hd1/projects/code_seg_qi/db/ACDC/processed/ACDC_Miccai_lax1_15p_5fold.h5",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": [["train1","train5","train3","train4"],["train2"]],
            "num_workers": 0
        },
        "transforms": ["Padding","RandomCrop","ToTensor","NormalizeInstance"],
        "transforms_args": {
            "Padding": [[12, 256]],
            "RandomCrop": [[12, 224]]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": ["cross_entropy_loss","tversky_loss"],
    "metric": ["accuracy", "dice", "dice_cat1", "dice_cat2", "dice_cat3"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 200,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
