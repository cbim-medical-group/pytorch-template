{
    "name": "brats_seg_AsynDGANv2_exp21_new3db_1label",
    "n_gpu": 1,

    "model": {
        "type": "Unet",
        "args": {
            "in_channel" : 3,
            "out_channel": 2
        }
    },
    "data_loader": {
        "type": "GeneralDataLoader",
        "args":{
            "data_dir": ["/research/cbim/medical/medical-share/public/BraTS2018/AsynDGANv2/General_format_BraTS18_train_2d_3ch_new.h5",
                "/research/cbim/medical/medical-share/public/BraTS2018/AsynDGANv2/General_format_BraTS18_test_2d_3ch_new.h5"],
            "batch_size": 40,
            "shuffle": true,
            "validation_split": [["train"],["test"]],
            "num_workers": 8
        },
        "transforms": ["FilterLabel","Resize", "RandomCrop", "RandomFlip","ToTensor","NormalizeInstance"],
        "transforms_args": {
            "Resize": [286],
            "RandomCrop": [256],
            "RandomFlip": [true, true],
            "FilterLabel": [[1,2,3,4, 255],[1,1,1,1, 1]]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.01,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": ["cross_entropy_loss","tversky_loss"],
    "metric": ["dice", "sensitivity", "specificity", "hausdorff95"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "Trainer",
        "epochs": 200,

        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        
        "monitor": "max val_dice",
        "early_stop": 50,

        "tensorboard": true
    }
}
