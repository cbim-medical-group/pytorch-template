{
    "name": "SVHN_synthetic_dcgan_spectral_norm",
    "n_gpu": 1,

    "model": {
        "type": "SvhnModelV2",
        "args": {
            "in_channel": 3
        }
    },
    "data_loader": {
        "type": "GeneralDataLoader",
        "args":{
            "data_dir": ["/share_hd1/db/tmp/svhn_dcgan_spectral_norm/test_latest/general_format_cifar10_daddcgan_cDCGAN_epochlatest_x1.h5",
                "/share_hd1/db/SVHN/true_images/general_format_test.h5"],
            "batch_size": 128,
            "shuffle": true,
            "validation_split": [["train"],["val"]],
            "num_workers": 0
        },
        "transforms": ["RandomFlip","ToTensor","NormalizeInstance"],
        "transforms_args": {
            "RandomFlip": [true, false, true]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": ["cross_entropy_loss"],
    "metric": ["accuracy"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
