{
    "name": "brats_seg_AsynDGANv2_exp46_channelnorm",
    "n_gpu": 1,

    "model": {
        "type": "Unet",
        "args": {
            "in_channel" : 3,
            "out_channel": 2
        }
    },
    "data_loader": {
        "type": "GeneralDataLoader",
        "args":{
            "data_dir": ["/research/cbim/vast/qc58/work/projects/AsynDGANv2/results/brats_AsynDGANv2_3db_exp43_2_doubleemod_t1c/Brats3db_resnet_3ch_doubleemod_t1c/test_200/brats_doublemod_exp46_0.h5",
                "/research/cbim/medical/medical-share/public/BraTS2018/AsynDGANv2/General_format_BraTS18_test_2d_3ch_new.h5"],
            "batch_size": 20,
            "shuffle": true,
            "validation_split": [["train"],["test"]],
            "num_workers": 8
        },
        "transforms": ["FilterLabel","Resize", "RandomCrop", "RandomFlip","ToTensor","NormalizeChannel"],
        "transforms_args": {
            "FilterLabel": [[1,2,4,255],[1,1,1,1]],
            "Resize": [286],
            "RandomCrop": [256],
            "RandomFlip": [true, true]
        }
    },
    "test_data_loader": {
        "type": "GeneralTestDataLoader",
        "args":{
            "data_dir": "/research/cbim/medical/medical-share/public/BraTS2018/AsynDGANv2/General_format_BraTS18_test_2d_3ch_new.h5",
            "batch_size": 20,
            "shuffle": true,
            "validation_split": 0,
            "num_workers": 8
        },
        "transforms": ["FilterLabel","Resize", "RandomCrop", "RandomFlip","ToTensor","NormalizeChannel"],
        "transforms_args": {
            "FilterLabel": [[1,2,4,255],[1,1,1,1]],
            "Resize": [286],
            "RandomCrop": [256],
            "RandomFlip": [false, false]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.01,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": ["cross_entropy_loss","tversky_loss"],
    "metric": ["dice", "sensitivity", "specificity", "hausdorff95"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "Trainer",
        "epochs": 200,

        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        
        "monitor": "max val_dice",
        "early_stop": 50,

        "tensorboard": true
    }
}
