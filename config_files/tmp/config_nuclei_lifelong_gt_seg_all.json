{
    "name": "Nulei_lifelong_gt_seg_all",
    "n_gpu": 1,

    "model": {
        "type": "Unet",
        "args": {
            "in_channel" : 1,
            "out_channel": 2
        }
    },
    "data_loader": {
        "type": "GeneralDataLoader",
        "args":{
            "data_dir": "/share_hd1/db/Nuclei/lifelong/256/general_format_train_all.h5",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 0
        },
        "transforms": ["RandomCrop","RandomFlip","ToTensor","Normalize"],
        "transforms_args": {
            "RandomCrop": [224],
            "Normalize": [[0.7442, 0.5381, 0.6650], [0.1580, 0.1969, 0.1504]]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": ["cross_entropy_loss","tversky_loss"],
    "metric": ["accuracy", "dice", "dice_cat1", "dice_cat2", "dice_cat3"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 200,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
