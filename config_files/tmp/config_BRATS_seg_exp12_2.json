{
    "name": "brats_seg_AsynDGANv2_exp12_2",
    "n_gpu": 1,

    "model": {
        "type": "Unet",
        "args": {
            "in_channel" : 1,
            "out_channel": 2
        }
    },
    "data_loader": {
        "type": "GeneralDataLoader",
        "args":{
            "data_dir": ["/research/cbim/medical/medical-share/public/BraTS2018/AsynDGANv2/General_format_BraTS18_train_random_split_2_1ch.h5",
                "/research/cbim/medical/medical-share/public/BraTS2018/AsynDGANv2/General_format_BraTS18_test_2d_1ch_new.h5"],
            "batch_size": 20,
            "shuffle": true,
            "validation_split": [["train"],["test"]],
            "num_workers": 0
        },
        "transforms": ["Unsqueeze","FilterLabel","Resize", "RandomCrop", "RandomFlip","ToTensor","NormalizeInstance"],
        "transforms_args": {
            "FilterLabel": [[1,2,4,255],[1,1,1,1]],
            "Resize": [286],
            "RandomCrop": [256],
            "RandomFlip": [true, true]
        }
    },
    "test_data_loader": {
        "type": "GeneralDataLoader",
        "args":{
            "data_dir": ["/research/cbim/medical/medical-share/public/BraTS2018/AsynDGANv2/General_format_BraTS18_test_2d_1ch_new.h5",
                "/research/cbim/medical/medical-share/public/BraTS2018/AsynDGANv2/General_format_BraTS18_test_2d_1ch_new.h5"],
            "batch_size": 20,
            "shuffle": true,
            "validation_split": [["test"],["test"]],
            "num_workers": 0
        },
        "transforms": ["Unsqueeze","FilterLabel","Resize", "RandomCrop","ToTensor","NormalizeInstance"],
        "transforms_args": {
            "FilterLabel": [[1,2,4,255],[1,1,1,1]],
            "Resize": [286],
            "RandomCrop": [256]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.01,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": ["cross_entropy_loss","tversky_loss"],
    "metric": ["dice", "sensitivity", "specificity", "hausdorff95"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "Trainer",
        "epochs": 200,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "max val_dice",
        "early_stop": 30,

        "tensorboard": false
    }
}
