{
    "name": "Misalignment_Correction",
    "n_gpu": 1,

    "model": {
        "type": "Vgg19Bn3d",
        "args": {
            "num_classes": 20
        }
    },
    "data_loader": {
        "type": "GeneralDataLoader",
        "args":{
            "data_dir": "/share_hd1/db/MRRecon/MMWHS_training.h5",
            "batch_size": 3,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 0
        },
        "transforms": ["FilterLabel","ExpRandomFlip","ExpRandomShiftSxlx","ExpPadding3d","ExpRandomCrop3d","ToTensor","Normalize3d"],
        "transforms_args": {
            "FilterLabel": [[2,3],[1,1]],
            "ExpRandomFlip": [true, false],
            "ExpPadding3d": [[136,136,10]],
            "ExpRandomCrop3d": [[120,120,10]],
            "ExpRandomShiftSxlx": [0.8, 10, 10, true],
            "Normalize3d": [[0,0,0],[100,1,1]],
            "ToTensor": ["float"]
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.001,
            "momentum": 0.9,
            "weight_decay": 0.0005
        }
    },
    "loss": ["exp_alignment_loss"],
    "metric": ["exp_alignment"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 500,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "TrainerUnsupervised",
        "epochs": 1500,

        "save_dir": "saved/",
        "save_period": 100,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 1500,

        "tensorboard": true
    }
}
