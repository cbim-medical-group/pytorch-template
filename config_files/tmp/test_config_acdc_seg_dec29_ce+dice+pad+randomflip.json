{
    "name": "ACDC_Segmentation_crossentropy+dice+padding_224",
    "n_gpu": 1,

    "model": {
        "type": "Unet",
        "args": {
            "in_channel" : 1,
            "out_channel": 4
        }
    },
    "data_loader": {
        "type": "AcdcDataLoader",
        "args":{
            "data_root": "db/",
            "batch_size": 1,
            "shuffle": false,
            "validation_split": 0.0,
            "num_workers": 0,
            "training": false
        },
        "transforms": ["ToTensor","NormalizeInstance"],
        "transforms_args": {
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": ["cross_entropy_loss","tversky_loss"],
    "metric": ["accuracy", "dice", "dice_cat1", "dice_cat2", "dice_cat3"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 200,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
