{
    "name": "ACDC_segmentation_evaluation_derivate2_1",
    "n_gpu": 1,

    "model": {
        "type": "Unet",
        "args": {
            "in_channel" : 1,
            "out_channel": 4
        }
    },
    "data_loader": {
        "type": "GeneralDataLoader",
        "args":{
            "data_dir": "/research/cbim/vast/qc58/private-db/cardiac/derivate_export_data/Export-1-Dyssynchrony Project-1604525068-2.h5",
            "batch_size": 20,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 0
        },
        "transforms": ["Unsqueeze","Resize", "RandomCrop", "RandomFlip","ToTensor","NormalizeInstance"],
        "transforms_args": {
            "Resize": [340],
            "RandomCrop": [320],
            "RandomFlip": [true, true]
        }
    },
    "test_data_loader": {
        "type": "GeneralDataLoader",
        "args":{
            "data_dir": "/research/cbim/vast/qc58/private-db/cardiac/derivate_export_data/Export-1-Dyssynchrony Project-1604525068-2.h5",
            "batch_size": 1,
            "shuffle": false,
            "validation_split": 0,
            "num_workers": 0,
            "has_label": false
        },
        "transforms": ["ToTensor","NormalizeInstance"],
        "transforms_args": {}
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.01,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": ["cross_entropy_loss","tversky_loss"],
    "metric": ["accuracy", "dice", "hausdorff95","dice_cat1","dice_cat2","dice_cat3"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "Trainer",
        "epochs": 200,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "max val_dice",
        "early_stop": 50,

        "tensorboard": true,
        "vis": false
    }
}
