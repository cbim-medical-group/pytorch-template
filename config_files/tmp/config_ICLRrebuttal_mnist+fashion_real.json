{
    "name": "ICLRRebuttal_MNIST_fashion_imbalanced_real",
    "n_gpu": 1,

    "model": {
        "type": "Vgg11Bn",
        "args": {
            "num_classes": 10,
            "in_channel": 1
        }
    },
    "data_loader": {
        "type": "FasterGeneralDataLoader",
        "args":{
            "data_dir": ["/research/cbim/vast/qc58/private-db/MNIST/imbalanced/general_format_train_MNIST_fashionMNIST.h5",
                "/research/cbim/vast/qc58/private-db/MNIST/imbalanced/general_format_test_MNIST_fashionMNIST.h5"],
            "batch_size": 64,
            "shuffle": true,
            "validation_split": [["train"], ["test"]],
            "num_workers": 4
        },
        "transforms": ["Padding","RandomFlip","RandomCrop","ToTensor","NormalizeInstance"],
        "transforms_args": {
            "Padding": [40],
            "RandomFlip": [true, false],
            "RandomCrop": [32],
            "ToTensor": ["long"]
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.01,
            "momentum": 0.9,
            "weight_decay": 0.0005
        }
    },
    "loss": ["cross_entropy_loss"],
    "metric": ["accuracy"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "Trainer",
        "epochs": 150,

        "save_dir": "saved/",
        "save_period": 30,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 150,

        "tensorboard": false
    }
}
