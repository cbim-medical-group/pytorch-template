{
    "name": "NIPS_syn_new1_mnist+font_newEqu_400",
    "n_gpu": 1,

    "model": {
        "type": "Vgg11Bn",
        "args": {
            "num_classes": 10,
            "in_channel": 1
        }
    },
    "data_loader": {
        "type": "GeneralDataLoader",
        "args":{
            "data_dir": ["/share_hd1/db/NIPS/synthetic/general_format_mnist_Font_Uniform_daddcgan_resnetGandD_10D_newEqn_GP_cDCGANResnet_epoch400_x1.h5",
                "/share_hd1/db/NIPS/MNIST_font/general_format_test_MNIST_font.h5"],
            "batch_size": 64,
            "shuffle": true,
            "validation_split": [["train"], ["val"]],
            "num_workers": 4
        },
        "transforms": ["Padding","RandomFlip","RandomCrop","ToTensor","NormalizeInstance"],
        "transforms_args": {
            "Padding": [40],
            "RandomFlip": [true, false],
            "RandomCrop": [32],
            "ToTensor": ["long"]
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.01,
            "momentum": 0.9,
            "weight_decay": 0.0005
        }
    },
    "loss": ["cross_entropy_loss"],
    "metric": ["accuracy", "sensitivity","specificity"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "Trainer",
        "epochs": 150,

        "save_dir": "saved/",
        "save_period": 30,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 150,

        "tensorboard": true
    }
}
