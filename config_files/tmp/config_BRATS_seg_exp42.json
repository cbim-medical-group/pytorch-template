{
    "name": "brats_seg_AsynDGANv2_exp42",
    "n_gpu": 1,

    "model": {
        "type": "Unet",
        "args": {
            "in_channel" : 2,
            "out_channel": 2
        }
    },
    "data_loader": {
        "type": "GeneralDataLoader",
        "args":{
            "data_dir": ["/research/cbim/vast/qc58/work/projects/AsynDGANv2/results/brats_AsynDGANv2_3db_exp33/Brats3db_resnet_3ch_doubleemod/test_200/brats_multilabel_perceptionloss100_hgglgg_resnet_9blocks_epoch200.h5",
                "/freespace/local/qc58/dataset/BraTS2018/AsynDGANv2/General_format_BraTS18_test_2d_3ch.h5"],
            "batch_size": 20,
            "shuffle": true,
            "validation_split": [["train"],["test"]],
            "num_workers": 8
        },
        "transforms": ["SelectChannel","FilterLabel","Resize", "RandomCrop", "RandomFlip","ToTensor","NormalizeInstance"],
        "transforms_args": {
            "SelectChannel": [[0,1],[0]],
            "FilterLabel": [[1,2,4,255],[1,1,1,1]],
            "Resize": [286],
            "RandomCrop": [256],
            "RandomFlip": [true, true]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.01,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": ["cross_entropy_loss","tversky_loss"],
    "metric": ["dice", "sensitivity", "specificity", "hausdorff95"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "Trainer",
        "epochs": 200,

        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        
        "monitor": "min val_dice",
        "early_stop": 50,

        "tensorboard": true
    }
}
