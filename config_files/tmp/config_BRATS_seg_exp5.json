{
    "name": "brats_seg_AsynDGANv2_exp5",
    "n_gpu": 1,

    "model": {
        "type": "Unet",
        "args": {
            "in_channel" : 1,
            "out_channel": 2
        }
    },
    "data_loader": {
        "type": "GeneralDataLoader",
        "args":{
            "data_dir": ["/freespace/local/qc58/dataset/BraTS2018/AsynDGANv2/General_format_BraTS18_train_three_center_2_2d_1ch_new.h5",
                "/freespace/local/qc58/dataset/BraTS2018/AsynDGANv2/General_format_BraTS18_test_2d_1ch_new.h5"],
            "batch_size": 20,
            "shuffle": true,
            "validation_split": [["train"],["test"]],
            "num_workers": 8
        },
        "transforms": ["Unsqueeze","FilterLabel","Resize", "RandomCrop", "RandomFlip","ToTensor","NormalizeInstance"],
        "transforms_args": {
            "Resize": [286],
            "Homochrome": [-1],
            "RandomCrop": [256],
            "RandomFlip": [true, true],
            "FilterLabel": [[2,4],[1,1]]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.01,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": ["cross_entropy_loss","tversky_loss"],
    "metric": ["accuracy", "dice", "sensitivity", "specificity", "hausdorff95"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "Trainer",
        "epochs": 200,

        "save_dir": "saved/",
        "save_period": 15,
        "verbosity": 2,
        
        "monitor": "min val_dice",
        "early_stop": 30,

        "tensorboard": true
    }
}
