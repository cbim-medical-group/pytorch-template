{
    "name": "brats_seg_AsynDGANv2_exp2_histnorm_channelnorm",
    "n_gpu": 1,

    "model": {
        "type": "Unet",
        "args": {
            "in_channel" : 3,
            "out_channel": 2
        }
    },
    "data_loader": {
        "type": "GeneralDataLoader",
        "args":{
            "data_dir": ["/share_hd1/db/BRATS/AsynDGANv2/General_format_BraTS18_train_2d_3ch.h5",
                "/share_hd1/db/BRATS/AsynDGANv2/General_format_BraTS18_test_2d_3ch.h5"],
            "batch_size": 10,
            "shuffle": true,
            "validation_split": [["train"],["test"]],
            "num_workers": 0
        },
        "transforms": ["FilterLabel","Resize", "RandomCrop", "RandomFlip","HistNorm","ToTensor","NormalizeChannel"],
        "transforms_args": {
            "Resize": [286],
            "RandomCrop": [256],
            "RandomFlip": [true, true],
            "FilterLabel": [[1, 2, 3, 4, 255],[1, 1, 1, 1, 1]]
        }
    },
    "test_data_loader": {
        "type": "GeneralTestDataLoader",
        "args":{
            "data_dir": "/share_hd1/db/BRATS/AsynDGANv2/General_format_BraTS18_test_2d_3ch.h5",
            "batch_size": 10,
            "shuffle": true,
            "validation_split": 0,
            "num_workers": 0
        },
        "transforms": ["FilterLabel","Resize", "RandomCrop", "RandomFlip","HistNorm","ToTensor","NormalizeChannel"],
        "transforms_args": {
            "Resize": [286],
            "RandomCrop": [256],
            "RandomFlip": [false, false],
            "FilterLabel": [[2,4],[1,1]]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.01,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": ["cross_entropy_loss","tversky_loss"],
    "metric": ["dice", "sensitivity", "specificity", "hausdorff95"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "Trainer",
        "epochs": 200,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "max val_dice",
        "early_stop": 50,

        "tensorboard": true
    }
}
