{
    "name": "MCNet_seg-exp19",
    "n_gpu": 1,

    "model": {
        "type": "Unet3dDeeper",
        "args": {
            "in_channel" : 1,
            "out_channel": 2
        }
    },
    "data_loader": {
        "type": "FasterGeneralDataLoader",
        "args":{
            "data_dir": ["/research/cbim/vast/qc58/pub-db/CAP/process/MC-Net/new_cap_process_train.h5","/research/cbim/vast/qc58/pub-db/CAP/process/MC-Net/new_cap_process_test.h5"],
            "batch_size": 15,
            "shuffle": true,
            "validation_split": [["train"],["test"]],
            "num_workers": 0
        },
        "transforms": ["ExpDtToSeg","ExpPadding3d","RandomCrop3d","RandomFlip3d","MoveAxis","Squeeze","NormalizeHist","ToTensor"],
        "transforms_args": {
            "ExpDtToSeg": [8, false],
            "ExpPadding3d": [[8, 220,220]],
            "RandomCrop3d": [[8, 192,192]],
            "RandomFlip3d": [true, false, true],
            "MoveAxis": [1, -1, true],
            "Normalize3d": [[128],[168.6]],
            "Squeeze": [null, false, true],
            "ToTensor": ["long"]
        }
    },
    "test_data_loader": {
        "type": "GeneralDataLoader",
        "args":{
            "data_dir": "/research/cbim/vast/qc58/pub-db/CAP/process/MC-Net/new_cap_process_test.h5",
            "batch_size": 1,
            "shuffle": false,
            "validation_split": [["test"],["test"]],
            "num_workers": 0
        },
        "transforms": ["ExpDtToSeg","ExpPadding3d","MoveAxis","Squeeze","NormalizeHist","ToTensor"],
        "transforms_args": {
            "ExpDtToSeg": [8, false],
            "ExpPadding3d": [[8, 220,220]],
            "MoveAxis": [1, -1, true],
            "Normalize3d": [[128],[168.6]],
            "Squeeze": [null, false, true],
            "ToTensor": ["long"]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.01,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": ["cross_entropy_loss", "dice_lossv3"],
    "metric": ["dice","hausdorff95_3d","jaccard","sensitivity","specificity"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "Trainer",
        "epochs": 300,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "max val_dice",
        "early_stop": 200,

        "tensorboard": true
    }
}
