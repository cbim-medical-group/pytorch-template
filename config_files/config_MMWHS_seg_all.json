{
    "name": "MMWHS_seg_miccai_feb21",
    "n_gpu": 1,

    "model": {
        "type": "Unet3d",
        "args": {
            "in_channel" : 1,
            "out_channel": 4
        }
    },
    "data_loader": {
        "type": "GeneralDataLoader",
        "args":{
            "data_dir": "/dresden/users/qc58/work/code_seg_tempate/db/MMWHS/processed/MMWHS_train_iso_region.h5",
            "batch_size": 2,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 0
        },
        "transforms": ["Unsqueeze","RandomSample","Padding3d", "RandomCrop3d","ToTensor","NormalizeInstance3d"],
        "transforms_args": {
            "RandomSample": [10],
            "Padding3d": [140],
            "RandomCrop3d": [128]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": ["cross_entropy_loss"],
    "metric": ["accuracy", "dice"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 200,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
